{
	"$schema": "https://biomejs.dev/schemas/2.1.2/schema.json",
	"javascript": {
		"formatter": {
			"semicolons": "asNeeded",
			"lineWidth": 100
		}
	},
	"linter": {
		"rules": {
			"suspicious": {
				"noExplicitAny": "off"
			},
			"complexity": {
				"noForEach": "off",
				"noThisInStatic": "off",
				"noBannedTypes": "off"
			},
			"correctness": {
				"noUnusedFunctionParameters": "off"
			},
			"style": {
				"noNonNullAssertion": "off",
				"noUselessElse": "off",
				"noParameterAssign": "off",
				"noDescendingSpecificity": "off"
			}
		}
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	},
	"overrides": [
		{
			"includes": [
				"**/*.svelte"
			],
			"linter": {
				"rules": {
					"style": {
						"useConst": "off",
						"useImportType": "off"
					},
					"correctness": {
						"noUnusedVariables": "off",
						"noUnusedImports": "off"
					}
				}
			}
		}
	]
}